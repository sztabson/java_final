<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>To do List</display-name>
  <welcome-file-list>
    <welcome-file>login.do</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>welcome</servlet-name>
    <jsp-file>/WEB-INF/views/welcome.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>welcome</servlet-name>
    <url-pattern>/app/welcome/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>admin</servlet-name>
    <jsp-file>/WEB-INF/views/users.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/app/admin/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>clients</servlet-name>
    <jsp-file>/WEB-INF/views/user_report.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>clients</servlet-name>
    <url-pattern>/app/user_report/*</url-pattern>
  </servlet-mapping>

</web-app>